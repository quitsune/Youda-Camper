<%- include("../partials/header") %>

<div class ="container">
    <div class ="row">
        <div class ="col-md-3">
            <p class = "lead">Youda Camper</p>
                <div class ="list-group">
                    <li class ="list-group-item">Info 1</li>
                    <li class ="list-group-item">Info 2</li>
                    <li class ="list-group-item">Info 3</li>
                </div>
            
        </div>
        
        <div class ="col-md-9">

            <div class="card ">
            <img src ="<%= campground.image %>" >
            <div class ="card-body">
                <h4 class= "float-end">Rs 800/ night</h4>
                <h4><a><%= campground.name %></a></h4>
                <p><%= campground.description %></p>
                <p><em>Submitted by <%= campground.author.username %></em></p>
                
                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                <div ><a class = "btn mr-md-2 mb-md-0 mb-2 btn-def btn-sm" href ="/campgrounds/<%= campground._id %>/edit">Edit</a>
                <form id = "delete-form" action ="/campgrounds/<%= campground._id %>?_method=DELETE" method = "post">
                <button class ="btn mr-md-2 mb-md-0 mb-2 btn-def btn-sm">Delete</button>
                
                </form>
                
                </div>
                <%} %>
            </div>
        </div>

                <div ><a class = "btn mr-md-2 mb-md-0 mb-2 btn-def" href ="/campgrounds/<%= campground._id %>/comments/new">Add a new comment</a></div>
                
                <hr>
                <% campground.comments.forEach(function(comment){ %>  
                    <div class="card mb-3" >
                    <div class="row p-3">
                    <div class="col-md-12">
                        <strong> <%= comment.author.username %></strong>
                        <span class= "float-end">10 days ago</span>
                        <p ><%= comment.text %> </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <div ><a class = "btn mr-md-2 mb-md-0 mb-2 btn-def" href ="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                        <form id = "delete-form" action ="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method = "post">
                            <button class ="btn mr-md-2 mb-md-0 mb-2 btn-def ">Delete</button>
                            
                            </form>
                        </div>

                        <%} %>
                    </div>
   
                    </div>
                    
                </div>
                    <%}) %>
            
        </div>
    </div>
</div>







