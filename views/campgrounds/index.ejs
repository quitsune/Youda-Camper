<%- include("../partials/header") %>



<header class =" jumbotron">
  
  <h1>Campgrounds</h1>
  <p>View our beautiful campground collection</p>
 
  <p>
    <a class = "btn mr-md-2 mb-md-0 mb-2 btn-def"href ="/campgrounds/new">Add a new Campground</a>
  </p>

</header>

<div class ="container mx-auto mt-4">
<div class ="row row-cols-1 row-cols-md-4 g-4 text-center">
<% campgrounds.forEach(function(campground){ %>
  <div class ="col">
  <div class="card" style="width: 18rem;">
  
      
      
      <img src ="<%= campground.image %>" class="card-img-top img-fluid" >

      <div class="card-body">
        <h4><%= campground.name %></h4>
        <a href ="/campgrounds/<%=campground._id%>" class ="btn mr-md-2 mb-md-0 mb-2 btn-def">More Info</a>
      
      </div>
    
  
</div>
</div>  
    
    <%});%>

  </div>
</div>
<%- include("../partials/footer") %>